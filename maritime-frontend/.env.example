# Maritime Frontend Environment Configuration

# Backend API Base URL (REQUIRED)
# This is the base URL for the maritime backend API
# For production: https://maritime-backend-q150.onrender.com
# For local development: http://localhost:8000
REACT_APP_API_BASE=https://maritime-backend-q150.onrender.com

# Environment Mode (OPTIONAL)
# Set to 'development' for local development, 'production' for deployment
# Default: production
REACT_APP_ENV=production

# Analytics Tracking ID (OPTIONAL)
# Google Analytics or other analytics service tracking ID
# Leave empty to disable analytics
REACT_APP_ANALYTICS_ID=

# Feature Flags (OPTIONAL)
# Enable/disable specific features for testing
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_DEBUG_LOGS=false

# Map Configuration (OPTIONAL)
# Default map center coordinates (Indian Ocean)
REACT_APP_MAP_CENTER_LAT=-10.0
REACT_APP_MAP_CENTER_LNG=75.0
REACT_APP_MAP_DEFAULT_ZOOM=5

# Update Intervals (OPTIONAL)
# How often to refresh data (in milliseconds)
REACT_APP_VESSEL_UPDATE_INTERVAL=30000
REACT_APP_SAFETY_UPDATE_INTERVAL=300000
REACT_APP_NOTIFICATION_UPDATE_INTERVAL=30000